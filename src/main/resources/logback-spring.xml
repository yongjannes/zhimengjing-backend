<configuration>
    <!-- ========== 开发环境日志配置 ========== -->
    <springProfile name="dev">

        <!-- 控制台输出 -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <!-- 日志格式：时间 线程 等级 类名 - 信息 -->
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 普通日志文件，按天滚动 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 当前日志文件路径 -->
            <file>logs/zhimengjing.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- 每天生成一个新日志文件 -->
                <fileNamePattern>logs/zhimengjing.%d{yyyy-MM-dd}.log</fileNamePattern>
                <!-- 保留30天的日志文件 -->
                <maxHistory>30</maxHistory>
                <!-- 总日志大小不超过3GB，超出会删除最旧的日志 -->
                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 错误日志文件，按天滚动 -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 当前错误日志文件路径 -->
            <file>logs/zhimengjing-error.log</file>
            <!-- 只接收 ERROR 级别日志 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- 每天生成一个新错误日志文件 -->
                <fileNamePattern>logs/zhimengjing-error.%d{yyyy-MM-dd}.log</fileNamePattern>
                <!-- 保留30天的错误日志文件 -->
                <maxHistory>30</maxHistory>
                <!-- 总错误日志大小不超过1GB -->
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 根日志配置：INFO级别及以上输出到控制台、文件、错误日志文件 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- ========== 生产环境日志配置 ========== -->
    <springProfile name="prod">

        <!-- 普通日志文件，按大小+日期滚动 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 当前日志文件路径 -->
            <file>logs/zhimengjing.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 每天生成新日志文件，并按100MB切分多个文件 -->
                <fileNamePattern>logs/zhimengjing.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- 单个日志文件最大100MB -->
                <maxFileSize>100MB</maxFileSize>
                <!-- 保留30天日志 -->
                <maxHistory>30</maxHistory>
                <!-- 总日志大小不超过3GB -->
                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 错误日志文件，按大小+日期滚动 -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 当前错误日志文件路径 -->
            <file>logs/zhimengjing-error.log</file>
            <!-- 只接收 ERROR 级别日志 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 每天生成新错误日志文件，并按100MB切分 -->
                <fileNamePattern>logs/zhimengjing-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- 单个错误日志文件最大100MB -->
                <maxFileSize>100MB</maxFileSize>
                <!-- 保留30天错误日志 -->
                <maxHistory>30</maxHistory>
                <!-- 总错误日志大小不超过1GB -->
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 根日志配置：INFO级别及以上输出到普通日志和错误日志 -->
        <root level="INFO">
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>
</configuration>
